{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 5,
    "patch": 0
  },

  "include": [
    "./ConanPresets.json"
  ],

  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Dev Debug",
      "generator": "Ninja",
      "description": "Developer debug build, tests enabled, no sanitizers",

      "inherits": "conan-debug",

      "binaryDir": "${sourceDir}/build/debug",

      "cacheVariables": {
        "BUILD_TESTING": "ON",
        "BUILD_BENCHMARKS": "OFF",
        "BUILD_COVERAGE": "OFF",
        "ENABLE_WARNINGS": "ON",
        "ENABLE_WARNINGS_AS_ERRORS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "release",
      "displayName": "Release",
      "generator": "Ninja",
      "description": "Optimized build with LTO, tests disabled",

      "inherits": "conan-release",
      "binaryDir": "${sourceDir}/build/release",

      "cacheVariables": {
        "BUILD_TESTING": "OFF",
        "BUILD_BENCHMARKS": "OFF",
        "BUILD_COVERAGE": "OFF",
        "ENABLE_WARNINGS": "ON",
        "ENABLE_WARNINGS_AS_ERRORS": "OFF",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF"
      }
    },

    {
      "name": "asan",
      "displayName": "ASan/UBSan Debug",
      "generator": "Ninja",
      "description": "Debug build with AddressSanitizer + UndefinedBehaviorSanitizer",

      "inherits": "conan-debug",
      "binaryDir": "${sourceDir}/build/asan",

      "cacheVariables": {
        "BUILD_TESTING": "ON",
        "BUILD_BENCHMARKS": "OFF",
        "BUILD_COVERAGE": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "tsan",
      "displayName": "TSan Debug",
      "generator": "Ninja",
      "description": "Debug build with ThreadSanitizer (no other sanitizers)",

      "inherits": "conan-debug",
      "binaryDir": "${sourceDir}/build/tsan",

      "cacheVariables": {
        "BUILD_TESTING": "ON",
        "BUILD_BENCHMARKS": "OFF",
        "BUILD_COVERAGE": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "coverage",
      "displayName": "Coverage Debug",
      "generator": "Ninja",
      "description": "Debug build with coverage instrumentation and tests",

      "inherits": "conan-debug",
      "binaryDir": "${sourceDir}/build/coverage",

      "cacheVariables": {
        "BUILD_COVERAGE": "ON",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "benchmark",
      "displayName": "Benchmarks Release",
      "generator": "Ninja",
      "description": "Release build with Google Benchmark",

      "inherits": "conan-release",
      "binaryDir": "${sourceDir}/build/benchmark",

      "cacheVariables": {
        "BUILD_TESTING": "OFF",
        "BUILD_BENCHMARKS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },

    {
      "name": "iwyu",
      "displayName": "Debug + IWYU",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/iwyu",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_IWYU": "ON"
      }
    },

    {
      "name": "ci-debug",
      "displayName": "CI Debug",
      "generator": "Ninja",
      "description": "CI-friendly debug config: tests + warnings-as-errors",

      "inherits": "conan-debug",
      "binaryDir": "${sourceDir}/build/ci-debug",

      "cacheVariables": {
        "ENABLE_CCACHE": "OFF",
        "ENABLE_WARNINGS_AS_ERRORS": "ON",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],

  "buildPresets": [
    { "name": "debug",      "configurePreset": "debug" },
    { "name": "release",  "configurePreset": "release" },
    { "name": "asan",     "configurePreset": "asan" },
    { "name": "tsan",     "configurePreset": "tsan" },
    { "name": "coverage", "configurePreset": "coverage" },
    { "name": "benchmark",    "configurePreset": "benchmark" },
    { "name": "ci-debug", "configurePreset": "ci-debug" }
  ],

  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": { "outputOnFailure": true }
    },
    {
      "name": "asan",
      "configurePreset": "asan",
      "output": { "outputOnFailure": true }
    },
    {
      "name": "tsan",
      "configurePreset": "tsan",
      "output": { "outputOnFailure": true }
    },
    {
      "name": "coverage",
      "configurePreset": "coverage",
      "output": { "outputOnFailure": true }
    },
    {
      "name": "ci-debug",
      "configurePreset": "ci-debug",
      "output": { "outputOnFailure": true }
    }
  ]
}
