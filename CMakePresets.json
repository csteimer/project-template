{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 5,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "debug",
      "displayName": "Dev Debug",
      "generator": "Ninja",
      "description": "Developer debug build, tests enabled, no sanitizers",
      "binaryDir": "${sourceDir}/build/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/debug/generators/conan_toolchain.cmake",
        "BUILD_TESTING": "ON",
        "BUILD_BENCHMARKS": "OFF",
        "BUILD_COVERAGE": "OFF",
        "ENABLE_WARNINGS": "ON",
        "ENABLE_WARNINGS_AS_ERRORS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "generator": "Ninja",
      "description": "Optimized build with LTO, tests disabled",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/release/generators/conan_toolchain.cmake",
        "BUILD_TESTING": "OFF",
        "BUILD_BENCHMARKS": "OFF",
        "BUILD_COVERAGE": "OFF",
        "ENABLE_WARNINGS": "ON",
        "ENABLE_WARNINGS_AS_ERRORS": "OFF",
        "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF"
      }
    },
    {
      "name": "asan",
      "displayName": "ASan/UBSan Debug",
      "generator": "Ninja",
      "description": "Debug build with AddressSanitizer + UndefinedBehaviorSanitizer",
      "binaryDir": "${sourceDir}/build/asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/asan/generators/conan_toolchain.cmake",
        "BUILD_TESTING": "ON",
        "BUILD_BENCHMARKS": "OFF",
        "BUILD_COVERAGE": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "tsan",
      "displayName": "TSan Debug",
      "generator": "Ninja",
      "description": "Debug build with ThreadSanitizer (no other sanitizers)",
      "binaryDir": "${sourceDir}/build/tsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/tsan/generators/conan_toolchain.cmake",
        "BUILD_TESTING": "ON",
        "BUILD_BENCHMARKS": "OFF",
        "BUILD_COVERAGE": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "coverage",
      "displayName": "Coverage Debug",
      "generator": "Ninja",
      "description": "Debug build with coverage instrumentation and tests",
      "binaryDir": "${sourceDir}/build/coverage",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/coverage/generators/conan_toolchain.cmake",
        "BUILD_COVERAGE": "ON",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "benchmark",
      "displayName": "Benchmarks Release",
      "generator": "Ninja",
      "description": "Release build with Google Benchmark",
      "binaryDir": "${sourceDir}/build/benchmark",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/benchmark/generators/conan_toolchain.cmake",
        "BUILD_TESTING": "OFF",
        "BUILD_BENCHMARKS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "iwyu",
      "displayName": "Debug + IWYU",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/iwyu",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/iwyu/generators/conan_toolchain.cmake",
        "BUILD_TESTING": "ON",
        "BUILD_BENCHMARKS": "OFF",
        "BUILD_COVERAGE": "OFF",
        "ENABLE_IWYU": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
,
    {
      "name": "ci-debug",
      "displayName": "CI Debug",
      "generator": "Ninja",
      "description": "CI-friendly debug config: tests + warnings-as-errors",
      "binaryDir": "${sourceDir}/build/ci-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/build/ci-debug/generators/conan_toolchain.cmake",
        "ENABLE_CCACHE": "OFF",
        "ENABLE_WARNINGS_AS_ERRORS": "ON",
        "BUILD_TESTING": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "asan",
      "configurePreset": "asan"
    },
    {
      "name": "tsan",
      "configurePreset": "tsan"
    },
    {
      "name": "coverage",
      "configurePreset": "coverage"
    },
    {
      "name": "benchmark",
      "configurePreset": "benchmark"
    },
    {
      "name": "ci-debug",
      "configurePreset": "ci-debug"
    }
  ],
  "testPresets": [
    {
      "name": "debug",
      "configurePreset": "debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "asan",
      "configurePreset": "asan",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "tsan",
      "configurePreset": "tsan",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "coverage",
      "configurePreset": "coverage",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "ci-debug",
      "configurePreset": "ci-debug",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
