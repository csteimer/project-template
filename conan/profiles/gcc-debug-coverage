[settings]
os=Linux
arch=x86_64
build_type=Debug
compiler=gcc
compiler.version=13
compiler.cppstd=20
compiler.libcxx=libstdc++11

[buildenv]
tools.build:cxxflags=["-O0","-g","--coverage"]
tools.build:cflags=["-O0","-g","--coverage"]
tools.build:sharedlinkflags=["--coverage"]
tools.build:exelinkflags=["--coverage"]

[options]
project-template/*:sanitizer=none
project-template/*:cmake_presets_name=coverage
project-template/*:enable_coverage=True
