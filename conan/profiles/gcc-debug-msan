[settings]
os=Linux
arch=x86_64
build_type=Debug
compiler=gcc
compiler.version=13
compiler.cppstd=20
compiler.libcxx=libstdc++11

[buildenv]
CXXFLAGS="-fsanitize=memory -fsanitize-memory-track-origins -fno-omit-frame-pointer"
CFLAGS="-fsanitize=memory -fsanitize-memory-track-origins -fno-omit-frame-pointer"
LDFLAGS="-fsanitize=memory -fsanitize-memory-track-origins"

[options]
project-template/*:sanitizer=msan
project-template/*:cmake_presets_name=msan
